// Code generated by github.com/arran4/go-subcommand/cmd/gosubc. DO NOT EDIT.

package main

import (
	"flag"
	"fmt"
	"os"
	"slices"
	"strings"

	"rootPkg"

	"example.com/test/cmd/app"
)

var _ Cmd = (*MyCmd)(nil)

type MyCmd struct {
	*RootCmd
	Flags         *flag.FlagSet
	config        Config
	myflag        string
	global_flag   string
	gen_flag      string
	mixed_flag    string
	mixed_gen     string
	alias_global  string
	SubCommands   map[string]func() Cmd
	CommandAction func(c *MyCmd) error
}

type UsageDataMyCmd struct {
	*MyCmd
	Recursive bool
}

func (c *MyCmd) Usage() {
	err := executeUsage(os.Stderr, "mycmd_usage.txt", UsageDataMyCmd{c, false})
	if err != nil {
		fmt.Fprintf(os.Stderr, "Error generating usage: %s\n", err)
	}
}

func (c *MyCmd) UsageRecursive() {
	err := executeUsage(os.Stderr, "mycmd_usage.txt", UsageDataMyCmd{c, true})
	if err != nil {
		fmt.Fprintf(os.Stderr, "Error generating usage: %s\n", err)
	}
}

func (c *MyCmd) Execute(args []string) error {
	{
		var err error
		c.config, err = rootPkg.LoadConfig()
		if err != nil {
			return fmt.Errorf("failed to generate config: %w", err)
		}
	}
	var remainingArgs []string
	seenFlags := make(map[string]bool)
	for i := 0; i < len(args); i++ {
		arg := args[i]
		if arg == "--" {
			remainingArgs = append(remainingArgs, args[i+1:]...)
			break
		}
		if strings.HasPrefix(arg, "--") {
			if arg == "--help" {
				c.Usage()
				return nil
			}
			name := arg[2:]
			value := ""
			hasValue := false
			if strings.Contains(name, "=") {
				parts := strings.SplitN(name, "=", 2)
				name = parts[0]
				value = parts[1]
				hasValue = true
			}
			_ = value
			_ = hasValue
			switch name {

			case "myflag", "flag":
				seenFlags["myflag"] = true
				if !hasValue {
					if i+1 < len(args) {
						value = args[i+1]
						i++
					} else {
						return fmt.Errorf("flag %s requires a value", name)
					}
				}
				v, err := ParseFunc(value)
				if err != nil {
					return fmt.Errorf("invalid value for flag %s: %w", name, err)
				}
				c.myflag = v

			case "global_flag", "global-flag":
				seenFlags["global_flag"] = true
				if !hasValue {
					if i+1 < len(args) {
						value = args[i+1]
						i++
					} else {
						return fmt.Errorf("flag %s requires a value", name)
					}
				}
				c.global_flag = value

			case "mixed_flag", "foo":
				seenFlags["mixed_flag"] = true
				if !hasValue {
					if i+1 < len(args) {
						value = args[i+1]
						i++
					} else {
						return fmt.Errorf("flag %s requires a value", name)
					}
				}
				c.mixed_flag = value

			case "alias_global":
				seenFlags["alias_global"] = true
				if !hasValue {
					if i+1 < len(args) {
						value = args[i+1]
						i++
					} else {
						return fmt.Errorf("flag %s requires a value", name)
					}
				}
				c.alias_global = value
			default:
				return fmt.Errorf("unknown flag: --%s", name)
			}
		} else if strings.HasPrefix(arg, "-") && arg != "-" {
			// Short flags
			shorts := arg[1:]
			for j := 0; j < len(shorts); j++ {
				char := string(shorts[j])
				if char == "h" {
					c.Usage()
					return nil
				}
				found := false

				if char == "g" {
					found = true
					seenFlags["alias_global"] = true
					// Value flag
					value := ""
					if j+1 < len(shorts) {
						// Value is the rest of the short flag
						value = shorts[j+1:]
						if strings.HasPrefix(value, "=") {
							value = value[1:]
						}
						j = len(shorts) // break inner loop
					} else {
						// Value is the next arg
						if i+1 < len(args) {
							value = args[i+1]
							i++
						} else {
							return fmt.Errorf("flag -%s requires a value", char)
						}
					}
					c.alias_global = value
				}
				if !found {
					return fmt.Errorf("unknown flag: -%s", char)
				}
			}
		} else {
			remainingArgs = append(remainingArgs, args[i:]...)
			break
		}
	}

	if len(remainingArgs) > 0 {
		if cmd, ok := c.SubCommands[remainingArgs[0]]; ok {
			return cmd().Execute(remainingArgs[1:])
		}
	}

	if c.CommandAction != nil {
		if !seenFlags["global_flag"] {
			return fmt.Errorf("required flag -global-flag not provided")
		}
		if err := c.CommandAction(c); err != nil {
			return fmt.Errorf("mycmd failed: %w", err)
		}
	} else {
		c.Usage()
	}

	return nil
}

func (c *RootCmd) NewMyCmd() *MyCmd {
	set := flag.NewFlagSet("mycmd", flag.ContinueOnError)
	v := &MyCmd{
		RootCmd:     c,
		Flags:       set,
		SubCommands: make(map[string]func() Cmd),
	}

	set.Func("flag", "TODO: Add usage text", func(s string) error {
		v, err := ParseFunc(s)
		if err != nil {
			return err
		}
		val := v
		v.myflag = val
		return nil
	})

	set.StringVar(&v.global_flag, "global-flag", "", "TODO: Add usage text")

	set.StringVar(&v.mixed_flag, "foo", "", "TODO: Add usage text")

	set.StringVar(&v.alias_global, "g", "", "TODO: Add usage text")
	set.Usage = v.Usage

	v.CommandAction = func(c *MyCmd) error {
		{
			var err error
			c.gen_flag, err = myfunc()
			if err != nil {
				return fmt.Errorf("failed to generate gen_flag: %w", err)
			}
		}
		{
			var err error
			c.mixed_gen, err = myfunc()
			if err != nil {
				return fmt.Errorf("failed to generate mixed_gen: %w", err)
			}
		}

		MyCmd(c.config, c.myflag, c.global_flag, c.gen_flag, c.mixed_flag, c.mixed_gen, c.alias_global)
		return nil
	}

	v.SubCommands["help"] = func() Cmd {
		return &InternalCommand{
			Exec: func(args []string) error {
				if slices.Contains(args, "-deep") {
					v.UsageRecursive()
					return nil
				}
				v.Usage()
				return nil
			},
			UsageFunc: v.Usage,
		}
	}
	v.SubCommands["usage"] = func() Cmd {
		return &InternalCommand{
			Exec: func(args []string) error {
				if slices.Contains(args, "-deep") {
					v.UsageRecursive()
					return nil
				}
				v.Usage()
				return nil
			},
			UsageFunc: v.Usage,
		}
	}
	return v
}
