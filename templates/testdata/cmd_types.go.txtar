	v := &MyCmd{
		RootCmd:     c,
		Flags:       set,
		SubCommands: make(map[string]func() Cmd),
	}

	if d, err := time.ParseDuration("1s"); err == nil {
		set.DurationVar(&v.timeout, "t", d, "Timeout duration")
	} else {
		set.DurationVar(&v.timeout, "t", 0, "Timeout duration")
	}

	set.IntVar(&v.count, "count", 3, "Retry count")

	set.StringVar(&v.config, "config", "config.yaml", "Config file")
	set.Usage = v.Usage

	v.CommandAction = func(c *MyCmd) error {

		mypkg.MyCmdFunc(c.timeout, c.count, c.config)
		return nil
	}

	v.SubCommands["help"] = func() Cmd {
		return &InternalCommand{
			Exec: func(args []string) error {
				for _, arg := range args {
					if arg == "-deep" {
						v.UsageRecursive()
						return nil
					}
				}
				v.Usage()
				return nil
			},
			UsageFunc: v.Usage,
		}
	}
	v.SubCommands["usage"] = func() Cmd {
		return &InternalCommand{
			Exec: func(args []string) error {
				for _, arg := range args {
					if arg == "-deep" {
						v.UsageRecursive()
						return nil
					}
				}
				v.Usage()
				return nil
			},
			UsageFunc: v.Usage,
		}
	}
	return v
}
